{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "expressanalytics/hero",
    "version": "0.1.0",
    "title": "Hero Section",
    "category": "expressanalytics",
    "icon": "cover-image",
    "description": "A hero section with heading, text, and call-to-action buttons.",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "heading": {
            "type": "string",
            "source": "html",
            "selector": "h1",
            "default": "Transform Your Data into Actionable Insights"
        },
        "description": {
            "type": "string",
            "source": "html",
            "selector": "p",
            "default": "Unlock the power of your data with our advanced analytics solutions. Make informed decisions and drive business growth."
        },
        "primaryButtonText": {
            "type": "string",
            "default": "Get Started"
        },
        "primaryButtonUrl": {
            "type": "string",
            "default": "#"
        },
        "secondaryButtonText": {
            "type": "string",
            "default": "Learn More"
        },
        "secondaryButtonUrl": {
            "type": "string",
            "default": "#"
        },
        "backgroundImage": {
            "type": "object",
            "default": {
                "url": "",
                "id": null,
                "alt": ""
            }
        },
        "overlayOpacity": {
            "type": "number",
            "default": 0.7
        },
        "align": {
            "type": "string",
            "default": "full"
        }
    },
    "textdomain": "expressanalytics",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
