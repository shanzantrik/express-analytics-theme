{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "expressanalytics/contact",
    "version": "1.0.0",
    "title": "Contact Section",
    "category": "expressanalytics",
    "icon": "email",
    "description": "Display contact information and form in an attractive layout.",
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "heading": {
            "type": "string",
            "default": "Get in Touch"
        },
        "description": {
            "type": "string",
            "default": "Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible."
        },
        "contactInfo": {
            "type": "object",
            "default": {
                "address": "123 Analytics Street, Tech City, TC 12345",
                "phone": "+1 (234) 567-89",
                "email": "info@expressanalytics.com"
            }
        },
        "formShortcode": {
            "type": "string",
            "default": "[contact-form-7 id=\"contact-form\" title=\"Contact Form\"]"
        },
        "showMap": {
            "type": "boolean",
            "default": true
        },
        "mapEmbedUrl": {
            "type": "string",
            "default": ""
        },
        "backgroundColor": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "gradient": {
            "type": "string"
        }
    },
    "textdomain": "expressanalytics",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
