{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "express-analytics/testimonials",
    "version": "1.0.0",
    "title": "Testimonials",
    "category": "express-analytics",
    "icon": "format-quote",
    "description": "Display customer testimonials in a grid or slider layout.",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "heading": {
            "type": "string",
            "default": "What Our Clients Say"
        },
        "description": {
            "type": "string",
            "default": "Read what our satisfied clients have to say about our analytics solutions"
        },
        "layout": {
            "type": "string",
            "default": "grid"
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "testimonials": {
            "type": "array",
            "default": []
        },
        "backgroundColor": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "gradient": {
            "type": "string"
        }
    },
    "textdomain": "express-analytics",
    "editorScript": "file:../../../../build/testimonials/block.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
