{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "expressanalytics/testimonials",
    "version": "1.0.0",
    "title": "Testimonials",
    "category": "expressanalytics",
    "icon": "format-quote",
    "description": "Display customer testimonials in a carousel or grid layout.",
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "heading": {
            "type": "string",
            "default": "What Our Clients Say"
        },
        "description": {
            "type": "string",
            "default": "Discover why businesses trust our analytics solutions"
        },
        "layout": {
            "type": "string",
            "default": "carousel"
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "testimonials": {
            "type": "array",
            "default": [
                {
                    "quote": "Express Analytics has transformed how we understand our data. Their solutions are intuitive and powerful.",
                    "author": "John Smith",
                    "position": "CEO",
                    "company": "Tech Solutions Inc.",
                    "image": null
                }
            ]
        },
        "backgroundColor": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "gradient": {
            "type": "string"
        }
    },
    "textdomain": "expressanalytics",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}
