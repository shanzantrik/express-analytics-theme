{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "expressanalytics/case-studies",
    "version": "1.0.0",
    "title": "Case Studies",
    "category": "expressanalytics",
    "icon": "portfolio",
    "description": "Display case studies in a grid layout with filtering options.",
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "heading": {
            "type": "string",
            "default": "Case Studies"
        },
        "description": {
            "type": "string",
            "default": "Discover how we've helped businesses achieve their goals"
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "showFilters": {
            "type": "boolean",
            "default": true
        },
        "selectedIndustry": {
            "type": "string",
            "default": ""
        },
        "postsToShow": {
            "type": "number",
            "default": 6
        },
        "orderBy": {
            "type": "string",
            "default": "date"
        },
        "order": {
            "type": "string",
            "default": "desc"
        },
        "backgroundColor": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "gradient": {
            "type": "string"
        }
    },
    "textdomain": "expressanalytics",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}
